[module/volumeintel]
type                      = internal/volume
format-volume             = <ramp-volume> <label-volume>
master-mixer              = Master
label-muted               = ÔÄ¶ muted
ramp-volume-0             = ÔÄ¶
ramp-volume-1             = ÔÄß
ramp-volume-2             = ÔÄ®
