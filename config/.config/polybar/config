label-urgent-background = ${colors.bar_bg}
label-urgent-padding = 1

; set icons
ws-icon-0 = 1;
ws-icon-1 = 2;
ws-icon-2 = 3;
ws-icon-3 = 4;
ws-icon-4 = 5;
