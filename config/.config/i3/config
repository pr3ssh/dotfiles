# Audio key-bindings
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5% #increase sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5% #decrease sound volume
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle # mute sound

bindsym $mod+m exec $term -e mocp -T darkdot_theme
bindsym $mod+Shift+m exec pavucontrol
for_window [class="URxvt" instance="floating"] floating enable border pixel 3


# Screenshots
bindsym Print exec --no-startup-id maim "/home/$USER/pictures/$(date)"
bindsym Control+Print exec --no-startup-id maim --window $(xdotool getactivewindow) "/home/$USER/pictures/$(date)"
bindsym Shift+Print exec --no-startup-id maim --select "/home/$USER/pictures/$(date)"



# Load on startup

# start polybar
exec_always --no-startup-id ~/.config/polybar/launch.sh

exec_always --no-startup-id feh --bg-fill ~/bg.jpg
exec --no-startup-id dunst
exec_always --no-startup-id setxkbmap -layout us -variant altgr-intl -option nodeadkeys -option caps:escape
exec_always --no-startup-id xrandr --output HDMI-1 --right-of eDP-1
